<h1>Posters</h1>
<%= link_to 'New poster', new_poster_path %>
<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>

  <% @posters.each do |poster| %>
    <tr>
      <td><%= poster.name %></td>
      <td><%= link_to 'Show', poster_path(poster) %></td>
      <td><%= link_to 'Edit', edit_poster_path(poster) %></td>
      <td><%= link_to 'Destroy', poster_path(poster),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>